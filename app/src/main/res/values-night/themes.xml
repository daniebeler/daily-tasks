<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Todo" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark</item>
        <item name="colorSecondaryVariant">@color/dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:statusBarColor" >@color/dark</item>

    </style>

    <style name="SCREEN">
        <item name="android:background">@color/dark</item>
    </style>

    <style name="TEXT">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ThemeButton" parent="@style/Widget.Material3.Button.IconButton">
        <item name="android:backgroundTint">@color/light</item>
        <item name="icon">@drawable/outline_light_mode_24</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottomsheet</item>
    </style>

    <style name="BottomSheetInput">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/light</item>
    </style>

    <style name="BottomSheetInputBorder">
        <item name="android:color">@color/dark</item>
    </style>

    <style name="BottomSheetInputButton" parent="@style/Widget.Material3.Button">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

</resources>